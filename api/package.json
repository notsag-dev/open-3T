{
  "name": "open3t-api",
  "version": "0.0.0",
  "description": "REST API of open3t",
  "main": "index.js",
  "scripts": {
    "test": "npm run migrate-tests && NODE_ENV=test mocha",
    "start": "node index.js",
    "migrate": "node_modules/.bin/sequelize db:migrate --config ./config/sequelize-migrations.js",
    "migrate-tests": "NODE_ENV=test npm run migrate",
    "eslint": "./node_modules/.bin/eslint --fix ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "1.18.3",
    "cookie-parser": "^1.4.3",
    "cors": "2.8.4",
    "express": "4.16.3",
    "express-jwt": "6.0.0",
    "jsonwebtoken": "8.3.0",
    "lint-staged": "^7.3.0",
    "passport": "0.4.0",
    "passport-twitter-token": "1.3.0",
    "pg": "7.4.3",
    "pg-hstore": "2.3.2",
    "request": "^2.88.0",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.2",
    "mocha": "^5.2.0",
    "prettier": "^1.14.3"
  }
}
